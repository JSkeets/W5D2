<h1>Create A New Post</h1>
<form class="" action="<%=sub_posts_url(params[:sub_id])%>" method="post">
  <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token %>">

<label>Title
  <input type="text" name="post[title]" value="">
</label>



<input type="hidden" name="post[sub_ids][]" value="">
  <%@subs.each do |sub| %>
  <label><%=sub.title %>

  <input
  type="checkbox"
  name="post[sub_ids][]"
  value="<%=sub.id %>"

  >
</label>
<% end %>
<label>Url
  <input type="password" name="post[content]" value="">
</label>

<label>Content
  <input type="text" name="post[content]" value="">
</label>

<input type="submit" name="" value="Create a New Post">

</form>
